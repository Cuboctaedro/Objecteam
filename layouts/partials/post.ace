section class="w-100 md:w-50p mb-6 px-gutter"
  a href={{ .URL | absLangURL }}
    div class="p-4 text border border-dashed text-grey-4 hover:shadow-4 transit"
      {{ if eq $.Kind "section" }}
      h2 class="title-light mb-2" {{ .Title }}
      {{ else }}
      h3 class="title-light mb-2" {{ .Title }}
      {{ end }}
      div class="mb-2 date-small uppercase text-grey-5"
        {{ partial "date" . }}
      div class="mt-2" {{ .Summary }}
